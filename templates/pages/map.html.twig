<!-- map Start -->
<div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
    <div class="container quote px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 pe-lg-0">
                    <h6 class="text-primary">Free Quote</h6>
                    <h1 class="mb-4">Cherchons v√¥tre Toit</h1>
                    <div id="hidden_address" data-address="{{hidden_address}}" ></div>
                    <p class="mb-4 pb-2">Cliquer sur votre toit pour deplacer le marker ensuite cliquer sur suivant</p>
                    <p class="mb-4 pb-2">Si vous trouvez pas votre toit cliquer sur "je trouve pas mon toit"</p>
                    {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="error-class">
                            {{ form_errors(form) }}
                        </div>
                        <div class="col-12">
                            {{ form_widget(form.geocode_lng) }}
                            {{ form_widget(form.geocode_lat) }}
                        </div>
                        <div class="col-6">
                            {{ form_widget(form.next, { 'label': 'Suivant' }) }}
                        </div>
                        <div class="col-6">
                            {{ form_widget(form.notfound, { 'label': 'Je trouve pas mon toit' }) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
            <div class="col-lg-6 ps-lg-0 wow fadeIn" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    {#<img class="position-absolute img-fluid w-100 h-100" src="{{ asset('assets/img/quote.jpg')}}" style="object-fit: cover;" alt="">#}
                    <div id="map"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Quote End -->