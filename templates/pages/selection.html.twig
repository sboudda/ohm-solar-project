<!-- map Start -->
<div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
    <div class="container quote px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 pe-lg-0">
                    <h6 class="text-primary">Free Quote</h6>
                    <h1 class="mb-4">Cherchons vôtre Toit</h1>
                    <div id="lng" data-address="{{hidden_address[1]}}" ></div>
                    <div id="lat" data-address="{{hidden_address[0]}}" ></div>
                    <p class="mb-4 pb-2">Bouger les quatres coins du caré pour selectionner votre Toit</p>
                    <p class="mb-4 pb-2">Ensuite cliquez sur suivant </p>
                    {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="error-class">
                            {{ form_errors(form) }}
                        </div>
                        <div class="col-12">
                            {{ form_widget(form.border_a) }}
                            {{ form_widget(form.border_b) }}
                            {{ form_widget(form.border_c) }}
                            {{ form_widget(form.border_d) }}
                            {{ form_widget(form.area) }}
                        </div>
                        <div class="col-6">
                            {{ form_widget(form.next, { 'label': 'Suivant' }) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
            <div class="col-lg-6 ps-lg-0 wow fadeIn" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <div id="map"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Quote End -->